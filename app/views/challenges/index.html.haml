
%h1 Challenges

#challenges.container
  -alt=false
  -@challenges.each do |challenge|
  -alt=!alt
    .challenge.columns{:class=>cycle('','alt')}
      .container
        .score.column.fixed
          .container
            .number
            .label lowest score
        .answers.column.fixed
          .conainer
            .number
            .label answers
        .title.column.elastic
          %a{:href=>url_for(challenge)}
            %h2=challenge.title
          .description
            =challenge.description
